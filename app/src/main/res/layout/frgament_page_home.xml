<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout
        android:id="@+id/rl_home_number"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:paddingTop="20dp"
        android:background="@color/base_head_background">
        <ImageView
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_centerInParent="true"
            android:background="@drawable/bg_circle"/>
        <RelativeLayout
            android:id="@+id/count"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:layout_centerInParent="true">
            <TextView
                android:id="@+id/tv_home_score"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="8000"
                android:textColor="#FFFFFF"
                android:textSize="50sp"
                android:textStyle="bold"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="金豆"
                android:textColor="#FFFFFF"
                android:layout_toRightOf="@id/tv_home_score"
                android:layout_marginTop="30dp"
                android:layout_marginLeft="5dp"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/count"
            android:gravity="center_horizontal"
            android:layout_centerHorizontal="true">

            <TextView
                android:id="@+id/tv_today"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="今日所得 "
                android:textColor="#FFFFFF"
                android:layout_centerHorizontal="true"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="未更新"
                android:textColor="#FF0000"
                android:layout_centerHorizontal="true"
                android:layout_toRightOf="@id/tv_today"/>
        </RelativeLayout>

    </RelativeLayout>



    <RelativeLayout
        android:id="@+id/rl_rank1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:background="#FFFFFF"
        android:layout_below="@+id/rl_home_number">
        <ImageView
            android:id="@+id/iv_home_rank"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_centerVertical="true"
            android:src="@drawable/medal"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="今日名次"
            android:layout_toRightOf="@+id/iv_home_rank"
            android:layout_marginLeft="5dp"
            style="@style/option_item_text"
            android:layout_centerVertical="true"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1"
            android:layout_centerInParent="true"
            android:textSize="25sp"
            android:textColor="#FF0000"
            android:textStyle="bold|italic"/>

        <TextView
            android:id="@+id/text2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="10"
            android:layout_marginLeft="2dp"
            style="@style/option_item_text"
            android:layout_alignParentRight="true"
            android:textColor="#FF0000"
            android:layout_centerVertical="true"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="班级总人数"
            style="@style/option_item_text"
            android:layout_toLeftOf="@+id/text2"
            android:layout_centerVertical="true"/>
    </RelativeLayout>
    <View
        android:id="@+id/view1"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_below="@+id/rl_rank1"
        android:background="@color/list_divider_color" />
    <RelativeLayout
        android:id="@+id/rl_rank2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:background="#FFFFFF"
        android:layout_below="@+id/view1">
        <ImageView
            android:id="@+id/iv_home_rankall"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_centerVertical="true"
            android:src="@drawable/medal2"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="总排名"
            android:layout_toRightOf="@+id/iv_home_rankall"
            android:layout_marginLeft="5dp"
            style="@style/option_item_text"
            android:layout_centerVertical="true"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1"
            android:layout_centerInParent="true"
            android:textSize="25sp"
            android:textColor="#FF0000"
            android:textStyle="bold|italic"/>

        <TextView
            android:id="@+id/text3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="10"
            android:layout_marginLeft="2dp"
            style="@style/option_item_text"
            android:layout_alignParentRight="true"
            android:textColor="#FF0000"
            android:layout_centerVertical="true"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="班级总人数"
            style="@style/option_item_text"
            android:layout_toLeftOf="@+id/text3"
            android:layout_centerVertical="true"/>
    </RelativeLayout>

    <View
        android:id="@+id/view2"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_below="@+id/rl_rank2"
        android:background="@color/list_divider_color" />
    <RelativeLayout
        android:id="@+id/rl_beans"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:background="#FFFFFF"
        android:layout_below="@+id/view2">
        <ImageView
            android:id="@+id/iv_home_beans"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_centerVertical="true"
            android:src="@drawable/gold_ingots"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="努力豆"
            android:layout_toRightOf="@+id/iv_home_beans"
            android:layout_marginLeft="5dp"
            style="@style/option_item_text"
            android:layout_centerVertical="true"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1000"
            android:layout_centerInParent="true"
            android:textSize="25sp"
            android:textColor="#FF0000"
            android:textStyle="bold|italic"/>
    </RelativeLayout>
    <View
        android:id="@+id/view3"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_below="@+id/rl_beans"
        android:background="@color/list_divider_color" />
    <RelativeLayout
        android:id="@+id/rl_home_share"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:background="#FFFFFF"
        android:layout_below="@+id/view3">
        <ImageView
            android:id="@+id/iv_home_share"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_centerVertical="true"
            android:src="@drawable/share"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="分享豆"
            android:layout_toRightOf="@+id/iv_home_share"
            android:layout_marginLeft="5dp"
            style="@style/option_item_text"
            android:layout_centerVertical="true"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1000"
            android:layout_centerInParent="true"
            android:textSize="25sp"
            android:textColor="#FF0000"
            android:textStyle="bold|italic"/>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_tip"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:layout_below="@+id/rl_home_share">
        <ImageView
            android:id="@+id/iv_home_notice"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_centerVertical="true"
            android:src="@drawable/icon_ad_notice"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="凑够足够的金豆可以兑换精美礼品"
            android:layout_toRightOf="@+id/iv_home_notice"
            android:layout_marginLeft="5dp"
            style="@style/option_item_text"
            android:textColor="#FF7F00"
            android:layout_centerVertical="true"/>

    </RelativeLayout>
</RelativeLayout>

